<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DvisionPreview">

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/catalogue_color"/>

    <ImageView
        android:id="@+id/AdminProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_admin"/>

    <TextView
        android:id="@+id/AdminDivisionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:text="DO Name"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/AdminProfile"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/AdminNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="DO Division"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/AdminProfile"
        app:layout_constraintTop_toBottomOf="@+id/AdminDivisionText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:id="@+id/AGSCDomain_preview_recycle_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>